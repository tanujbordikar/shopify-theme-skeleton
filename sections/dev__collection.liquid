<div class="px-4 py-8">
    <a href="{{ routes.collections_url }}" class="text-base text-gray-500 hover:underline text-center block my-4">Go back to collections</a>
    {% paginate collection.products by section.settings.number_of_products_per_page %}
        <h1 class="text-3xl text-center">{{ collection.title }}</h1>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for product in collection.products %}
                    <div class="w-full py-6 px-3">
                        <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
                            <a href="{{ product.url }}">
                                {% if product.featured_image %}
                                    <div class="h-80 overflow-hidden">
                                        <div class="collections-image__classes {{ section.settings.collections-image__classes }} w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform">
                                            {{ product.featured_image | image_url: width: 300, height: 400 | image_tag }}
                                        </div>
                                    </div>
                                {% else %}
                                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                                {% endif %}
                            </a>
                            <div class="flex flex-col p-4">
                                <span class="text-sm text-gray-400">{{ product.vendor }}</span>
                                <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
                                <p class="text-gray-500">{{ product.price | money }}</p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>There are no products inside of this collection</p>
                {% endfor %}
            </div>
        </div>
        {% render 'icon-pagination', pagination: paginate %}
    {% endpaginate %}
</div>

{% schema %}
{
    "name": "Collection",
    "settings": [
        {
            "type": "number",
            "id": "number_of_products_per_page",
            "default": 6,
            "label": "Number of products per page"
        }
    ]
}
{% endschema %}