<!-- video-text-section.liquid -->

<div class="video-text-container {{ section.settings.video_text_container }}">
  <!-- Video container -->
  <div class="video-container {{ section.settings.video_container }}">

    <video
      class="video-container__video {{ section.settings.video_container_video }}"
      controls
      autoplay
      loop>
      <source src={{ section.settings.video_link }} />
    </video>
  </div>

  <!-- Text container -->
  <div class="text-container {{ section.settings.text_container }}">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          <h2 class="text-container__heading {{ section.settings.text_container_heading }}">
            {{ block.settings.heading }}
          </h2>
        {% when 'sub_heading' %}
          <h3 class="text-container__sub-heading {{ section.settings.text_container_sub_heading }}">
            {{ block.settings.sub_heading }}
          </h3>
        {% when 'paragraph' %}
          <p class="text-container__paragraph {{ section.settings.text_container_paragraph }}">
            {{ block.settings.paragraph }}
          </p>
        {% when 'button' %}
          <a href={{ block.settings.button_link }} class="text-container__button {{ section.settings.text_container_button }}">
            {{ block.settings.button_text }}
          </a>
      {% endcase %}
    {% endfor %}
  </div>
</div>

