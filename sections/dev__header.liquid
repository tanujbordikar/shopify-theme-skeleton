    },
    {
      "type": "textarea",
      "id": "mobile_menu_content_classes",
      "label": "Mobile Menu Content Classes",
      "default": "shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full"
    },
